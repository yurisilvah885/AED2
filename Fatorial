/******************************************************************************

YURI DA SILVA PIO RA-8130022
Objetivo- Código para encontrar o fatorial de algum número.
No main, o valor passado foi o 4.

*******************************************************************************/


#include <stdio.h>

int fatorial(int n)
{
    int fat;
   
    if( n == 0 ) {
        fat = 1;
    } else {
        fat = n * fatorial (n-1);
    }

    return fat;
}

int main() {
    int n = fatorial(4);
   
    printf("\n O fatorial de 4 é %d", n);
   
    return 0;
}
